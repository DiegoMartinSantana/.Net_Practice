@model IEnumerable<PersonModel>

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["pageTitle"]</title>
    <meta charset="utf-8" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link href="~/StyleSheet.css" rel="stylesheet" />
</head>

<body>
    @{
        ////save into a var a js or html 
        //string alertMessage = $"<script>alert('hola!!!!,{collection.Count}')</script>";
        ////LOCAL FUNCTION
        int GetRamdomNumber()
        {
            return new Random().Next(int.MinValue, int.MaxValue);
        }
        int GetPositiveNumber() => new Random().Next(0, int.MaxValue);
    }
    <div class="container">
        @*@Html.Raw(alertMessage)*@
        <div class="row">
            @{ 
            //    List<PersonModel>? collectionPeople = (List<PersonModel>)ViewData["collectionPeople"];
            }
            @foreach (var item in ViewBag.collectionPeople)
            {
                <h5>@GetRamdomNumber()</h5>
                <h5>@GetPositiveNumber()</h5>
                //STATIC TEXT
                <text> HELLO TO A STATIC TEXT</text>
                @:HELLO TO A STATIC TEXT IN C# CODE
                <div class="col">
                    @switch (item.Nationality)
                    {
                        case "USA":
                            // <label>@Model.Author</label>
                            <label>"A USA PEOPLE"</label>
                            break;
                        case "ARG":
                            <label>A ARG PEOPLE</label>
                            break;
                        case "BRA":
                            <label>A BRA PEOPLE</label>
                            break;
                        default:
                            break;
                    }
                    @if (item.Age <= 30)
                    {
                        <label>Hi,im @item.Name</label>
                        <label>I'm from @item.Nationality</label>
                        <label>i am @item.Age years old</label>
                    }
                    else
                    {
                        <label>Hi,im @item.Name</label>
                        <label>I'm from @item.Nationality</label>
                        <label>i am @item.Age years old</label>
                        <h3>
                            ELSE CASE
                        </h3>
                    }
                </div>
            }

        </div>
    </div>

</body>
</html>
