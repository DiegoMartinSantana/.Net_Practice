
@model CityWeather

<!DOCTYPE html>
<html>
<head>
    <title>City Weather</title>
    <meta charset="utf-8" />
    <link href="~/WeatherAppStyle.css" rel="stylesheet" />
</head>

<body class="﻿bodyClass">
    <div class="container">
        <div class="page-content">

            <div class="margin-bottom">
                <h2>Weather</h2>
            </div>
            @if (Model != null)
            {
                <div class="margin-top-200  margin-top-200 w-30 box cursor-pointer">

                    <div class="flex flex-borderless">

                        <div class="w-30 box cursor-pointer">
                            <div class="flex-borderless">
                                <div class="w-50">
                                    <h4>@Model.CityName</h4>
                                    <h4 class="text-dark-grey margin-top">@Model.DateAndTime.ToString("dd MMM yyyy")</h4>
                                    <h4 class="text-dark-grey margin-top">@Model.DateAndTime.ToString("hh:mm tt")</h4>


                                </div>
                                <div class="w-50 border-left">
                                    <h1 class="margin-left">@Model.TemperatureFahrenheit <sup class="text-grey">&#8457</sup></h1>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a href="~/Weather">Return to HomePage</a>

                </div>
            }
            else
            {
                <div>
                    <h3>City Code is not valid</h3>
                </div>
            }
        </div>
    </div>


</body>
</html>
